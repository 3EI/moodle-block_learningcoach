{{!
    Learner Profile.

    Classes required for JS:
    * -

    Data attibutes required for JS:
    * -

    Context variables required for this template:
    * datas
    * Force1
    * Force2
    * Force3
    * score
    * url_profile
    * data_access
    * display_profile
    * enrolment_url
}}

    {{#display_profile}}
        {{#data_access}}
            {{score}}
            <div class="path-block-learningcoach container podium">
                <div class="path-block-learningcoach podium__item">
                    <p class="path-block-learningcoach podium__force">{{{Force2}}}</p>
                    <div class="path-block-learningcoach podium__rank second">2</div>
                </div>
                <div class="path-block-learningcoach podium__item">
                    <p class="path-block-learningcoach podium__force">{{{Force1}}}</p>
                    <div class="path-block-learningcoach podium__rank first">1</div>
                </div>
                <div class="path-block-learningcoach podium__item">
                    <p class="path-block-learningcoach podium__force">{{{Force3}}}</p>
                    <div class="path-block-learningcoach podium__rank third">3</div>
                </div>
            </div>
            <div class="path-block-learningcoach lc__btn">
                <a href="{{url_profile}}" class="btn btn-secondary">{{#str}} blockprofile, block_learningcoach {{/str}}</a>
            </div>
        {{/data_access}}

        {{^data_access}}
            <div class="path-block-learningcoach center">
                <p><b>{{#str}} blocknodata, block_learningcoach {{/str}}</b></p>
                <small><i>{{#str}} blockinfo, block_learningcoach {{/str}}</i></small>
            </div>
        {{/data_access}}
    {{/display_profile}}


